{% extends 'layout.html.twig' %}

{% block title %}Message
{% endblock %}

{% block body %}
    <main>
        <section class="container my-5">
            <div class="card mt-5">
                <div class="text-center">
                    <h1 class="my-5">Inbox</h1>
                </div>
                <div class="fw-bold">


                    {% for message in messagestwo %}
                    {% if message.toFreelancer.id == 1 %}
                        <div class="card text-dark bg-light m-4" style="max-width: 100%;">
                            <div class="card-header">From:
                                {{ message.toFreelancer.firstname ~ ' ' ~ message.toFreelancer.lastname }}
                                à
                                {{ message.sentdate|date('d/m/Y, H:i:s') }}</div>
                            <div class="card-body">
                                <h6 class="card-title">
                                    <strong>Subject:</strong>
                                    {{ message.subject }}
                                </h6>
                                <p class="card-text fw-light">
                                    {{ message.message }}</p>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    {% for message in messagesone %}
                        <div class="card text-dark bg-light m-4" style="max-width: 100%%;">
                            <div class="card-header">To:
                                {{ message.fromFreelancer.firstname ~ ' ' ~ message.fromFreelancer.lastname }}
                                à
                                {{ message.sentdate|date('d/m/Y, H:i:s') }}</div>
                            <div class="card-body">
                                <h6 class="card-title">
                                    <strong>Subject:</strong>
                                    {{ message.subject }}
                                </h6>
                                <p class="card-text fw-light">
                                    {{ message.message }}</p>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="w-50 m-auto">
                        {{ form_start(form) }}
                        {{ form_label(form.subject) }}
                        {{ form_widget(form.subject, {'attr': {'class': 'form-control'}})}}
                        {{ form_label(form.message) }}
                        {{ form_widget(form.message, {'attr': {'class': 'form-control'}})}}
                        <div class="text-center">
                        <input type="submit" class="btn btn-success my-3" value="Send">
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </main>
        </section>
    {% endblock %}
